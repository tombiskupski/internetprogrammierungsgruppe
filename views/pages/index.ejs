<footer id="footer" class="container-fluid text-center" >
  <form action="/" method="post"> 
    <a href="/bildupload" >Click to Upload a Photo!</a>
    <div class = "c text-center">   <!--Comment input class-->
      <div id='form'>
        <div class="row">
          <div class="col">
            <form action="/" method="post" id="commentform">
              <div id="comments-name" class="form-row">
                <input id="kommentar" name="kommentar" type = "text" placeholder = "Enter your Comment">
                <input id="bildnummer" name="bildnummer" type = "number" placeholder = "Enter the Bildid">
                <!--<input type="submit" value="Post it!">-->
              <button id="form-submit"  type="submit" class="btn btn-primary">Post It!</button>
              </div>
          </div>
         </div>
       </div>
    </div>
  </form>
