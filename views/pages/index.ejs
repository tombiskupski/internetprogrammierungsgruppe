<body method="get">
  
    <div class="row text-center headerColor" style="border : 1px solid #cecece ;">  <!--Banner on top of the site-->
      <div class= "container textColor">
        <p style="font-size:28px "><h1 method="get" class="headerMessage">Instagram Clone</h1></p>
        <h2><%= message %></h2>
        <h3><%= warningMessage %></h3>
      </div>
      <div id="loginFormula">
        <form id="loginfeld"  method="post" action="/">
          <input name="loginname" type="text"  class="fadeIn second" placeholder="login">
          <input name="password"  class="fadeIn third" placeholder="password">
          <input type="submit" class="fadeIn fourth" value="Log In">
        </form>
      </div>
    </div>
  
    <div id = "space"> <!--Placeholder class between Elements-->
  
    </div>

    
    <div class="container ">  <!--container with all Elements of the Instagram Post-->
      <div class="row ">
    <div class = "col whiteColor" style = "border: 1px solid #cecece;"> 
      <!--<div class="col text-center "> 
        <img src="https://www.improgrammer.net/wp-content/uploads/2017/06/kBbPmyS9L7ghV0_Mwoeq5PhVErMmqxXONr0SS9u_Xik.jpg" class="img" alt="swag" width="350" height="350">
      </div>-->
      <table>
        <tbody>
          <% 
          var i = 0;
          photo.forEach(element => {
            i = element.bildid
            %>
            <tr>
              <h1><%=element.bildid%></h1>
              <td><img width="200px" src="<%=element.base64%>"></td>
            </tr>
            <table>
              <tbody>
                <% data.forEach(element => {%>
                  <% if( element.bildid == i){%>
                  <tr>
                    <td class="text-primary"><%=element.user%>:</td>
                    <td class="text-danger"><%=element.kommentar%></td>
                  </tr>
                  <%}%>
                  <%})%>
              </tbody>
            </table>
            <% }) %>
        </tbody>
      </table>


